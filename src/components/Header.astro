<script is:inline>
const mobileMenu = document.getElementById("mobile-menu")

function toggleMenu() {
	const bottomClass = "left-0"
	const topClass = "-left-full"
	const isOpen = mobileMenu.classList.contains(bottomClass)
	if (isOpen) {
		mobileMenu.classList.remove(bottomClass)
		mobileMenu.classList.add(topClass)
	} else {
		mobileMenu.classList.remove(topClass)
		mobileMenu.classList.add(bottomClass)
	}
}
</script>
